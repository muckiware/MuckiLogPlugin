<?xml version="1.0" encoding="UTF-8"?>
<configuration xmlns="http://logging.apache.org/log4php/">
  <appender name="RollingFileAppender" class="MuckiLogPlugin\log4php\appenders\LoggerAppenderRollingFile">
    <param name="file" value="/var/www/html/var/log/header.myplugin.log"/>
    <param name="maxBackupIndex" value="10"/>
    <param name="maxFileSize" value="10MB"/>
    <layout class="MuckiLogPlugin\log4php\layouts\LoggerLayoutPattern">
      <param name="conversionPattern" value="%date{Y-m-d H:i:s,u} [%t] %-5p (%C) %m%n%ex"/>
    </layout>
    <filter class="MuckiLogPlugin\log4php\filters\LoggerFilterLevelRange">
      <param name="levelMin" value="debug"/>
      <param name="acceptOnMatch" value="false"/>
    </filter>
  </appender>
  <root>
    <level value="DEBUG"/>
    <appender_ref ref="RollingFileAppender"/>
  </root>
</configuration>
